---
import Navbar from '../components/Navbar.svelte';
import Footer from '../components/Footer.svelte';

import '../styles/styles.css';

import metaImage from '../assets/images/global/logo_meta.webp';
import appleTouchIcon from '../assets/images/favicon/apple-touch-icon.png';
import favicon32 from '../assets/images/favicon/favicon-32x32.png';
import favicon16 from '../assets/images/favicon/favicon-16x16.png';

const { 
    title, 
    description = "ROK information done right. Enhance your Rise of Kingdoms experience on Discord today.", 
    bodyClass = "" 
} = Astro.props;
const currentPath = Astro.url.pathname;
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>{title} - Codex Helper</title>
    <meta name="description" content={description}>

    <meta property="og:title" content={`${title} - Codex Helper`}>
    <meta property="og:description" content={description}>
    <meta property="og:image" content={new URL(metaImage.src, Astro.url)}>
    <meta property="og:url" content={Astro.url.href}>
    <meta property="og:type" content="website">
    <meta name="theme-color" content="#3b82f6">

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <link rel="apple-touch-icon" sizes="180x180" href={appleTouchIcon.src}>
    <link rel="icon" type="image/png" sizes="32x32" href={favicon32.src}>
    <link rel="icon" type="image/png" sizes="16x16" href={favicon16.src}>
    <link rel="manifest" href="/site.webmanifest">

    <script async src="https://www.googletagmanager.com/gtag/js?id=G-156DRH9ZB0"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-156DRH9ZB0');
    </script>
    
    <slot name="head-scripts" />
    
    <style is:global>
        #snow-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 9999;
            overflow: hidden;
        }

        .snowflake {
            position: absolute;
            top: -5vh;
            color: white;
            opacity: 0;
            font-size: 1em;
            user-select: none;
            will-change: transform;
            animation-name: fall;
            animation-timing-function: linear;
            animation-iteration-count: infinite;
        }

        @keyframes fall {
            0% {
                transform: translateY(0) translateX(0);
                opacity: 0;
            }
            10% {
                opacity: 0.8;
            }
            100% {
                transform: translateY(105vh) translateX(20px);
                opacity: 0.3;
            }
        }
    </style>
</head>
<body class={bodyClass}>
    <div id="snow-container" aria-hidden="true"></div>

    <Navbar client:load {currentPath} />

    <slot />

    <Footer />
    
    <script>
        import "../scripts/utils.js";
        import "../scripts/auth.js";
        import "../scripts/script.js";
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const container = document.getElementById('snow-container');
            if (!container) return;

            const isMobile = window.innerWidth < 768;
            const snowCount = isMobile ? 20 : 50; 
            const characters = ['•', '·', '❄'];

            for (let i = 0; i < snowCount; i++) {
                const snowflake = document.createElement('div');
                snowflake.classList.add('snowflake');
                
                snowflake.innerHTML = characters[Math.floor(Math.random() * characters.length)];
                
                snowflake.style.left = Math.random() * 100 + 'vw';
                
                snowflake.style.fontSize = (Math.random() * 10 + 10) + 'px';
                
                const duration = Math.random() * 15 + 10 + 's';
                
                const delay = Math.random() * 15 + 's';
                
                snowflake.style.animationDuration = duration;
                snowflake.style.animationDelay = delay;
                
                container.appendChild(snowflake);
            }
        });
    </script>

    <slot name="body-scripts" />
</body>
</html>