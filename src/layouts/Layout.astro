---
import Navbar from '../components/Navbar.svelte';
import Footer from '../components/Footer.svelte';

import '../styles/styles.css';

import metaImage from '../assets/images/global/logo_meta.webp';
import appleTouchIcon from '../assets/images/favicon/apple-touch-icon.png';
import favicon32 from '../assets/images/favicon/favicon-32x32.png';
import favicon16 from '../assets/images/favicon/favicon-16x16.png';

import toolBgImage from '../assets/images/global/tool_bg.webp';
import { ViewTransitions } from 'astro:transitions';

const {
    title,
    description = "ROK information done right. Enhance your Rise of Kingdoms experience on Discord today.",
    bodyClass = "",
    keywords = "Rise of Kingdoms, ROK, calculator, tools, speedup calculator, troop calculator, RoK helper, Rise of Kingdoms guide"
} = Astro.props;

const currentPath = Astro.url.pathname;
const isToolPage = currentPath.startsWith('/tools');
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const fullTitle = `${title} - Codex Helper | Rise of Kingdoms Tools`;
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

    <!-- Primary Meta Tags -->
    <title>{fullTitle}</title>
    <meta name="title" content={fullTitle}>
    <meta name="description" content={description}>
    <meta name="keywords" content={keywords}>
    <meta name="author" content="Codex Helper">
    <meta name="robots" content="index, follow">
    <link rel="canonical" href={canonicalURL}>

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content={canonicalURL}>
    <meta property="og:title" content={fullTitle}>
    <meta property="og:description" content={description}>
    <meta property="og:image" content={new URL(metaImage.src, Astro.site)}>
    <meta property="og:site_name" content="Codex Helper">

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:url" content={canonicalURL}>
    <meta name="twitter:title" content={fullTitle}>
    <meta name="twitter:description" content={description}>
    <meta name="twitter:image" content={new URL(metaImage.src, Astro.site)}>

    <!-- Additional SEO -->
    <meta name="theme-color" content="#3b82f6">
    <meta name="application-name" content="Codex Helper">
    <meta name="apple-mobile-web-app-title" content="Codex Helper">

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <link rel="apple-touch-icon" sizes="180x180" href={appleTouchIcon.src}>
    <link rel="icon" type="image/png" sizes="32x32" href={favicon32.src}>
    <link rel="icon" type="image/png" sizes="16x16" href={favicon16.src}>
    <link rel="manifest" href="/site.webmanifest">

    <script async src="https://www.googletagmanager.com/gtag/js?id=G-156DRH9ZB0"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-156DRH9ZB0');
    </script>

    <slot name="head-scripts" />
</head>
<body class={bodyClass}>
    {isToolPage && (
        <div class="global-tool-bg" style={`background-image: url(${toolBgImage.src})`}></div>
    )}

    <Navbar client:load {currentPath} />

    <slot />

    <Footer />
    
    <script>
        import "../scripts/utils.js";
        import "../scripts/auth.js";
        import "../scripts/script.js";
    </script>

    <slot name="body-scripts" />

    <style>
        .global-tool-bg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            z-index: -1;
            pointer-events: none;
            background-color: #000;
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }
    </style>
</body>
</html>