---
import Navbar from '../components/Navbar.svelte';
import Footer from '../components/Footer.svelte';

import '../styles/styles.css';

import metaImage from '../assets/images/global/logo_meta.webp';
import appleTouchIcon from '../assets/images/favicon/apple-touch-icon.png';
import favicon32 from '../assets/images/favicon/favicon-32x32.png';
import favicon16 from '../assets/images/favicon/favicon-16x16.png';

import toolBgImage from '../assets/images/global/tool_bg.webp';
import { ViewTransitions } from 'astro:transitions';

const { 
    title, 
    description = "ROK information done right. Enhance your Rise of Kingdoms experience on Discord today.", 
    bodyClass = "" 
} = Astro.props;

const currentPath = Astro.url.pathname;

const isToolPage = currentPath.startsWith('/tools');
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>{title} - Codex Helper</title>
    <meta name="description" content={description}>

    <meta property="og:title" content={`${title} - Codex Helper`}>
    <meta property="og:description" content={description}>
    <meta property="og:image" content={new URL(metaImage.src, Astro.url)}>
    <meta property="og:url" content={Astro.url.href}>
    <meta property="og:type" content="website">
    <meta name="theme-color" content="#3b82f6">

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <link rel="apple-touch-icon" sizes="180x180" href={appleTouchIcon.src}>
    <link rel="icon" type="image/png" sizes="32x32" href={favicon32.src}>
    <link rel="icon" type="image/png" sizes="16x16" href={favicon16.src}>
    <link rel="manifest" href="/site.webmanifest">

    <script async src="https://www.googletagmanager.com/gtag/js?id=G-156DRH9ZB0"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-156DRH9ZB0');
    </script>
    
    <slot name="head-scripts" />
</head>
<body class={bodyClass}>
    {isToolPage && (
        <div class="global-tool-bg" style={`background-image: url(${toolBgImage.src})`}></div>
    )}

    <Navbar client:load {currentPath} />

    <slot />

    <Footer />
    
    <script>
        import "../scripts/utils.js";
        import "../scripts/auth.js";
        import "../scripts/script.js";
    </script>

    <slot name="body-scripts" />

    <style>
        .global-tool-bg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            z-index: -1;
            pointer-events: none;
            background-color: #000;
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }
    </style>
</body>
</html>