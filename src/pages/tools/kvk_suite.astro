---
import Layout from '../../layouts/Layout.astro';
import '../../styles/kvk_suite.css';
import TechSimulator from '../../components/kvk_suite/TechSimulator.svelte';
import KvKTimers from '../../components/kvk_suite/KvKTimers.svelte';
import crystalIcon from '../../assets/images/kvk_suite/crystal.webp';
---

<Layout
    title="KvK Suite"
    description="Rise of Kingdoms KvK tools - Crystal Tech simulator, flag cost calculator, and KvK timers. Plan your Kingdom vs Kingdom strategy with our comprehensive tools."
    keywords="Rise of Kingdoms KvK, ROK KvK calculator, crystal tech simulator, flag calculator, KvK timer, Kingdom vs Kingdom, ROK KvK tools, Rise of Kingdoms war"
    bodyClass="has-sub-nav"
>
    <main class="tool-page-wrapper">
        <section class="tool-hero">
            <div class="tool-hero-container">
                <div class="quick-access-container">
                    <div class="quick-access-nav" id="quick-access-nav"></div>
                </div>
                <h1 id="calculator-main-title" class="calculator-main-title"></h1>
                <p id="calculator-main-description"></p>
            </div>
        </section>

        <section class="tool-content">
            <div class="carousel-container">
                <div class="carousel-track-container">
                    <div class="carousel-track">

                        <!-- Crystal Tech Simulator -->
                        <div class="carousel-slide" data-title="Crystal Tech Simulator" data-description="Simulate and plan your Crystal Technology research for maximum efficiency in your upcoming KvK.">
                            <TechSimulator client:load />
                        </div>

                        <!-- Timers & Tracking -->
                        <div class="carousel-slide" data-title="Timers & Tracking" data-description="Track important KvK & buff timers to stay ahead of your opponents.">
                            <KvKTimers client:load />
                        </div>

                        <!-- Flag Cost Calculator -->
                        <div class="carousel-slide" data-title="Flag Cost Calculator" data-description="Calculate the resource costs for placing flags in KvK.">
                            <div class="coming-soon-simple">Coming soon!</div>
                        </div>

                    </div>
                </div>
            </div>
        </section>
    </main>

    <script define:vars={{ crystalIconSrc: crystalIcon.src }}>
        window.kvkCrystalIcon = crystalIconSrc;
    </script>
    <script>
        import "../../scripts/kvk_suite.js";
    </script>
</Layout>
