---
import Layout from '../../layouts/Layout.astro';
import CalendarComponent from '../../components/calendar/Calendar.svelte';
---

<Layout
    title="Event Calendar"
    description="Track upcoming Rise of Kingdoms events with our interactive calendar. Plan your gameplay around MGE, Wheel of Fortune, strategic reserves, and more."
    keywords="Rise of Kingdoms events, ROK event calendar, ROK event tracker, MGE schedule, Wheel of Fortune, Rise of Kingdoms schedule"
    bodyClass="has-sub-nav"
>
    <script type="application/ld+json" slot="head-scripts">
        {
            "@context": "https://schema.org",
            "@type": "WebApplication",
            "name": "ROK Event Calendar",
            "description": "Track upcoming Rise of Kingdoms events and plan your gameplay",
            "url": "https://codexhelper.com/tools/calendar/",
            "applicationCategory": "GameApplication",
            "operatingSystem": "Any",
            "offers": {
                "@type": "Offer",
                "price": "0",
                "priceCurrency": "USD"
            },
            "author": {
                "@type": "Organization",
                "name": "Codex Helper"
            }
        }
    </script>
    <main class="tool-page-wrapper">
        <noscript><div style="text-align:center;padding:2rem;color:#ccc;">This tool requires JavaScript to run. Please enable JavaScript in your browser settings.</div></noscript>
        <CalendarComponent client:only="svelte" />
    </main>
</Layout>
