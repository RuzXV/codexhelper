                                        >
                                        <label for="same-kvk-checkbox" class="toggle-label"
                                            >Same KvK / Vacation Mode</label
                                        >
                                    </div>
                                    <button id="calculate-passport-btn" class="btn-primary">Calculate</button>
                                    <div id="passport-needed-result" class="calc-result"></div>
                                    <div id="cost-result" class="calc-result"></div>
                                    <div id="passport-power-breakdown" class="calc-result"></div>
                                </div>
                            </div>
                        </div>

                        <div
                            class="carousel-slide"
                            data-title="Hall of Heroes"
                            data-description="Calculate the total power returned from your dead troops in KvK."
                            data-icon={hohIconPath}
                        >
                            <div class="calculator-island">
                                <div class="island-content">
                                    <div class="form-group">
                                        <label>KvK Troop Return Rate</label>
                                        <div class="hoh-return-selector">
                                            <label
                                                ><input type="radio" name="hoh-return-rate" value="0.30" /><span
                                                    class="hoh-return-btn"
                                                    >30%<span class="hoh-return-sublabel">Pre-SoC KvK</span></span
                                                ></label
