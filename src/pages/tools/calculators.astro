                            <div class="calculator-island">
                                <div class="island-content">
                                    <div class="form-group">
                                        <div class="label-with-toggle">
                                            <label for="power-input">Your Power</label>
                                            <div class="hoh-link-group">
                                                <label for="hoh-link-toggle" class="toggle-switch">
                                                    <input type="checkbox" id="hoh-link-toggle" />
                                                    <span class="toggle-slider"></span>
                                                </label>
                                                <label for="hoh-link-toggle" class="hoh-link-label-top">Link</label>
                                                <a href="#" id="hoh-hyperlink" class="hoh-link-anchor"
                                                    >HoH<Image
                                                        src={imageMap['hoh_icon.webp']}
                                                        alt="HoH Icon"
                                                        width="60"
                                                        height="60"
                                                        loading="lazy"
                                                        quality={100}
                                                    /></a
