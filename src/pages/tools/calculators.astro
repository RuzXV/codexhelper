---
import { Image } from 'astro:assets';
import Layout from '../../layouts/Layout.astro';
import '../../styles/calculators.css';

const allCalculatorImageModules = import.meta.glob<any>('../../assets/images/calculators/**/*.{webp,png,jpg}', {
    eager: true,
});
const imageMap: { [key: string]: any } = {};
const imagePathMap: { [key: string]: string } = {};
for (const path in allCalculatorImageModules) {
    const filename = path.split('/').pop();
    if (filename) {
        const mod = allCalculatorImageModules[path];
        imageMap[filename] = mod.default;
        imagePathMap[filename] = mod.default.src;
    }
}

const skillIconPath = imagePathMap['legendary_sculpture.webp'];
const apIconPath = imagePathMap['ap_icon.webp'];
const expIconPath = imagePathMap['experience_book.webp'];
const vipIconPath = imagePathMap['vip_icon.webp'];
const buildingIconPath = imagePathMap['book_of_covenant.webp'];
const passportIconPath = imagePathMap['passport.webp'];
const hohIconPath = imagePathMap['hoh_icon.webp'];
