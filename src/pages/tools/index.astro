---
import Layout from '../../layouts/Layout.astro';
import '../../styles/tools.css';

import mailIcon from '../../assets/images/navi/mail.webp';
import generalIcon from '../../assets/images/navi/general.webp';
import equipmentIcon from '../../assets/images/navi/equipment.webp';
import davorIcon from '../../assets/images/navi/davor_icon.webp';
import calendarIcon from '../../assets/images/navi/calendar.webp';
import speedupsIcon from '../../assets/images/navi/speedups.webp';
// TODO: Add kvk_icon.webp when available
// import kvkIcon from '../../assets/images/navi/kvk_icon.webp';
---

<Layout
    title="Tools"
    description="Free Rise of Kingdoms calculators and tools. Speedup calculator, troop calculator, equipment planner, alliance mail generator, and more ROK optimization tools."
    keywords="Rise of Kingdoms tools, ROK calculator, Rise of Kingdoms calculator, speedup calculator, troop calculator, ROK tools, RoK equipment, alliance mail generator, ROK planner"
    bodyClass="has-sub-nav"
>
    <main class="tool-page-wrapper">
        <section class="tool-hero">
            <div class="tool-hero-container">
                <h1 class="hero-title-text"><span>Codex Helper</span> <span class="highlight">Community Tools</span></h1>
                <p class="hero-subtitle">Optimize your gameplay with our suite of advanced calculators and generators.</p>
            </div>
        </section>
    
        <section class="tool-content">
            <div class="tool-grid-modern">
                <a href="/tools/mail/" class="tool-card-modern">
                    <div class="card-glow"></div>
                    <div class="card-icon-container">
                        <img src={mailIcon.src} alt="Mail Icon" width="64" height="64" loading="eager" />
                    </div>
                    <div class="card-text">
                        <h3>Alliance Mail Generator</h3>
                        <p>Create formatted, professional in-game mails for your alliance with ease.</p>
                    </div>
                    <div class="card-arrow"><i class="fas fa-arrow-right"></i></div>
                </a>

                <a href="/tools/calculators/" class="tool-card-modern">
                    <div class="card-glow"></div>
                    <div class="card-icon-container">
                        <img src={generalIcon.src} alt="Calculator Icon" width="64" height="64" loading="eager" />
                    </div>
                    <div class="card-text">
                        <h3>General Calculators</h3>
                        <p>Calculate skill upgrade costs, passport requirements, action points, and more.</p>
                    </div>
                    <div class="card-arrow"><i class="fas fa-arrow-right"></i></div>
                </a>

                <a href="/tools/equipment/" class="tool-card-modern">
                    <div class="card-glow"></div>
                    <div class="card-icon-container">
                        <img src={equipmentIcon.src} alt="Equipment Icon" width="64" height="64" loading="eager" />
                    </div>
                    <div class="card-text">
                        <h3>Equipment Manager</h3>
                        <p>Plan your equipment crafting, track materials, and optimize your gear.</p>
                    </div>
                    <div class="card-arrow"><i class="fas fa-arrow-right"></i></div>
                </a>

                <a href="/tools/speedups/" class="tool-card-modern">
                    <div class="card-glow"></div>
                    <div class="card-icon-container">
                        <img src={speedupsIcon.src} alt="Speedups Icon" width="64" height="64" loading="eager" />
                    </div>
                    <div class="card-text">
                        <h3>Speedup Calculator</h3>
                        <p>Calculate the exact amount of speedups needed for training and healing.</p>
                    </div>
                    <div class="card-arrow"><i class="fas fa-arrow-right"></i></div>
                </a>

                <a href="/tools/davor_toolkit/" class="tool-card-modern special-card">
                    <div class="card-glow"></div>
                    <div class="card-icon-container">
                        <img src={davorIcon.src} alt="Davor Icon" width="64" height="64" loading="eager" />
                    </div>
                    <div class="card-text">
                        <h3>Davor's Toolkit</h3>
                        <p>Advanced combat optimization, stat weighting, and armament scoring.</p>
                    </div>
                    <div class="card-arrow"><i class="fas fa-arrow-right"></i></div>
                </a>

                <a href="/tools/calendar/" class="tool-card-modern">
                    <div class="card-glow"></div>
                    <div class="card-icon-container">
                        <img src={calendarIcon.src} alt="Calendar Icon" width="64" height="64" loading="eager" />
                    </div>
                    <div class="card-text">
                        <h3>Event Calendar</h3>
                        <p>Track upcoming events, manage rotations, and plan your growth ahead.</p>
                    </div>
                    <div class="card-arrow"><i class="fas fa-arrow-right"></i></div>
                </a>

                <a href="/tools/kvk_suite/" class="tool-card-modern coming-soon-card">
                    <div class="card-glow"></div>
                    <div class="card-icon-container kvk-icon-placeholder">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <div class="card-text">
                        <h3>KvK Suite</h3>
                        <p>Comprehensive tools for Kingdom vs Kingdom management and optimization.</p>
                    </div>
                    <div class="card-badge coming-soon">Coming Soon</div>
                    <div class="card-arrow"><i class="fas fa-arrow-right"></i></div>
                </a>
            </div>
        </section>
    </main>
</Layout>

<style>
    .hero-title-text {
        font-size: var(--font-size-4xl);
        font-weight: 800;
        margin-bottom: var(--spacing-2);
        color: var(--text-primary);
    }
    .hero-title-text .highlight {
        color: var(--accent-blue-bright);
        text-shadow: 0 0 20px rgba(90, 160, 255, 0.4);
    }
    .hero-subtitle {
        color: var(--text-secondary);
        font-size: var(--font-size-lg);
        max-width: 800px;
        margin: 0 auto;
        
        white-space: nowrap;
    }

    .tool-grid-modern {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
        gap: var(--spacing-6);
        max-width: 1200px;
        margin: 0 auto;
        padding: var(--spacing-4);
    }

    .tool-card-modern {
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        padding: var(--spacing-6);
        border-radius: var(--radius-xl);
        text-decoration: none;
        overflow: hidden;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        
        background: rgba(20, 21, 24, 0.6);
        border: 1px solid rgba(255, 255, 255, 0.08);
    }

    .tool-card-modern:hover {
        transform: translateY(-5px);
        background: rgba(30, 32, 40, 0.7);
        border-color: rgba(90, 160, 255, 0.3);
    }

    .card-glow {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(circle at top right, rgba(59, 130, 246, 0.15), transparent 60%);
        opacity: 0;
        transition: opacity 0.4s ease;
        pointer-events: none;
    }
    .tool-card-modern:hover .card-glow {
        opacity: 1;
    }

    .card-icon-container {
        margin-bottom: var(--spacing-4);
        padding: var(--spacing-3);
        background: rgba(255, 255, 255, 0.03);
        border-radius: var(--radius-lg);
        border: 1px solid rgba(255, 255, 255, 0.05);
        transition: transform 0.3s ease;
    }
    .card-icon-container img {
        width: 48px;
        height: 48px;
        object-fit: contain;
        filter: drop-shadow(0 4px 6px rgba(0,0,0,0.3));
    }
    .tool-card-modern:hover .card-icon-container {
        transform: scale(1.1) rotate(3deg);
        background: rgba(59, 130, 246, 0.1);
        border-color: rgba(59, 130, 246, 0.2);
    }

    .card-text h3 {
        color: var(--text-primary);
        font-size: var(--font-size-xl);
        font-weight: 700;
        margin-bottom: var(--spacing-2);
    }
    .card-text p {
        color: var(--text-secondary);
        font-size: var(--font-size-sm);
        line-height: 1.6;
        margin: 0;
    }

    .card-arrow {
        margin-top: auto;
        padding-top: var(--spacing-6);
        width: 100%;
        display: flex;
        justify-content: flex-end;
        color: var(--accent-blue);
        font-size: var(--font-size-lg);
        opacity: 0.6;
        transition: all 0.3s ease;
    }
    .tool-card-modern:hover .card-arrow {
        opacity: 1;
        transform: translateX(5px);
        color: var(--accent-blue-bright);
    }

    .special-card {
        border-color: rgba(255, 215, 0, 0.15);
    }
    .coming-soon-card {
        border-color: rgba(59, 130, 246, 0.2);
    }
    .coming-soon-card:hover {
        border-color: rgba(59, 130, 246, 0.4);
    }
    .card-badge {
        position: absolute;
        top: 12px;
        right: 12px;
        background: rgba(255, 215, 0, 0.15);
        border: 1px solid rgba(255, 215, 0, 0.3);
        color: #ffd700;
        font-size: 0.7rem;
        font-weight: 700;
        padding: 2px 8px;
        border-radius: 12px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    .card-badge.coming-soon {
        background: rgba(59, 130, 246, 0.15);
        border: 1px solid rgba(59, 130, 246, 0.3);
        color: var(--accent-blue-bright);
    }
    .kvk-icon-placeholder {
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .kvk-icon-placeholder i {
        font-size: 2rem;
        color: var(--accent-blue);
    }
    .tool-card-modern:hover .kvk-icon-placeholder i {
        color: var(--accent-blue-bright);
    }

    @media (max-width: 768px) {
        .tool-grid-modern {
            grid-template-columns: 1fr;
            padding: var(--spacing-2);
        }
        .tool-card-modern {
            flex-direction: row;
            align-items: center;
            gap: var(--spacing-4);
            padding: var(--spacing-4);
        }
        .card-icon-container {
            margin-bottom: 0;
            width: 60px;
            height: 60px;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
        }
        .card-icon-container img {
            width: 32px;
            height: 32px;
        }
        .card-arrow {
            display: none;
        }
        .card-text h3 {
            font-size: var(--font-size-base);
            margin-bottom: 2px;
        }
        .card-text p {
            font-size: var(--font-size-xs);
        }
        .card-badge {
            display: none;
        }
        .hero-title-text span {
            display: block;
        }
        
        .hero-title-text .highlight {
            margin-top: 4px;
        }
        
        .hero-title-text {
            text-align: center;
            flex-direction: column;
        }
    }
</style>